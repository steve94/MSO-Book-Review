= form_for @book do |f|
  -if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date_of_publication
    = f.date_select :date_of_publication
  .field
    = f.label :author_id
    = f.text_field :author_id
  .field
    = f.label :publisher_id
    = f.text_field :publisher_id
  .field
    = f.label :genre_id
    = f.text_field :genre_id
  .field
    = f.label :location_id
    = f.text_field :location_id
  .actions
    = f.submit 'Save'
