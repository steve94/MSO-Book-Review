!!! DOCTYPE html
%html
  %head
    %title BookReview
    = stylesheet_link_tag :all 
    = javascript_include_tag :defaults 
    = csrf_meta_tag 

  %body
    #banner
      #header{:onclick => "location.href='#{root_path}'"}
        %h1 MSO Books
      #nav
        %ul
          %li= link_to 'Startseite', root_path
          %li= link_to 'Bücher', books_path
          %li= link_to 'Autoren', authors_path
          %li= link_to 'Genren', genres_path

    #main
      #content
        -if notice
          #notice= notice
        = yield
      #sidebar
        #user_info
          %h3 Hallo du.
          %p Du musst dich anmelden um die Site nutzen zu können.
          %p
            = link_to 'anmelden', books_path
            \|
            = link_to 'MSO intern', "https://intern.marienschule.com/magic/home"
            
        -if (yield :sidebar) != ""
          #view= yield :sidebar
          
    #footer
      Erstellt von Stefan Diesing ©2010
      \|
      = mail_to 'stefan.diesing@t-online.de','Mail senden', :subject => "MSO-Book-Reviews"